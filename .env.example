# PostgreSQL Database Configuration
# Copy this file to .env and update with your values

# Database Connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vnstock_db
DB_USER=vnstock_user
DB_PASSWORD=vnstock_password_change_in_production

# Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# PgAdmin
PGADMIN_EMAIL=admin@vnstock.com
PGADMIN_PASSWORD=admin123

# Application
NODE_ENV=development
LOG_LEVEL=info

# Security (Generate secure values for production)
JWT_SECRET=change_this_to_a_random_secret_key
SESSION_SECRET=change_this_to_another_random_secret

# API Configuration
API_PORT=5000
API_HOST=0.0.0.0

# Data Refresh Intervals (in seconds)
PRICE_UPDATE_INTERVAL=300
INDICATOR_UPDATE_INTERVAL=3600
FORECAST_UPDATE_INTERVAL=86400
