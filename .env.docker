# Docker Environment Configuration
# Copy this to .env and update values for your deployment

# ════════════════════════════════════════════════════════════════
# DATABASE CONFIGURATION
# ════════════════════════════════════════════════════════════════
DB_HOST=postgres
DB_PORT=5432
DB_NAME=vnstock_db
DB_USER=vnstock_user
DB_PASSWORD=vnstock_password_change_in_production

# Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# ════════════════════════════════════════════════════════════════
# API SERVER CONFIGURATION
# ════════════════════════════════════════════════════════════════
API_HOST=0.0.0.0
API_PORT=5000
DEBUG=false

# ════════════════════════════════════════════════════════════════
# APPLICATION SETTINGS
# ════════════════════════════════════════════════════════════════
NODE_ENV=production
LOG_LEVEL=info

# ════════════════════════════════════════════════════════════════
# SECURITY (CHANGE THESE IN PRODUCTION!)
# ════════════════════════════════════════════════════════════════
JWT_SECRET=change_this_to_a_random_secret_key_in_production
SESSION_SECRET=change_this_to_another_random_secret_in_production

# ════════════════════════════════════════════════════════════════
# DATA COLLECTION SETTINGS
# ════════════════════════════════════════════════════════════════
AUTO_COLLECT_ENABLED=true

# Stock Data Collection
STOCK_COLLECTION_ENABLED=true
STOCK_COLLECTION_INTERVAL=3600
STOCK_COLLECTION_MARKET_HOURS_ONLY=true
STOCK_COLLECTION_END_OF_DAY=true

# Market Indices Collection
INDEX_COLLECTION_ENABLED=true
INDEX_COLLECTION_INTERVAL=1800

# Macro Indicators Collection
MACRO_COLLECTION_ENABLED=true
MACRO_COLLECTION_INTERVAL=86400
MACRO_DAILY_UPDATE=true
MACRO_DAILY_UPDATE_HOUR=6

# ════════════════════════════════════════════════════════════════
# MARKET HOURS
# ════════════════════════════════════════════════════════════════
MARKET_OPEN_HOUR=9
MARKET_CLOSE_HOUR=15
MARKET_DAYS=mon-fri

# ════════════════════════════════════════════════════════════════
# DATA REFRESH INTERVALS (seconds)
# ════════════════════════════════════════════════════════════════
PRICE_UPDATE_INTERVAL=300
INDICATOR_UPDATE_INTERVAL=3600
FORECAST_UPDATE_INTERVAL=86400

# ════════════════════════════════════════════════════════════════
# PGADMIN (Optional)
# ════════════════════════════════════════════════════════════════
PGADMIN_EMAIL=admin@vnstock.com
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050

# ════════════════════════════════════════════════════════════════
# DATA SOURCE CONFIGURATION
# ════════════════════════════════════════════════════════════════
STOCK_DATA_SOURCE_PRIMARY=VCI
STOCK_DATA_SOURCE_FALLBACK=TCBS
STOCK_DATA_TIMEOUT=30

# Rate Limiting
COLLECTION_RATE_LIMIT_DELAY=0.3
COLLECTION_MAX_RETRIES=3
